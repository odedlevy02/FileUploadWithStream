    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "fileserver",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/fileserver/index.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "gateway",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/gateway/index.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ],
    "compounds": [
        {
            "name": "run-all",
            "configurations": ["gateway","fileserver"]
        }
    ]
}